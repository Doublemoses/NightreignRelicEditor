<Window x:Class="NightreignRelicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NightreignRelicEditor"
        mc:Ignorable="d"
        Title="Nightreign Relic Editor" Height="407" Width="975">
    <StackPanel Orientation="Horizontal">
        <Grid Width="394">
            <TabControl>
                <TabItem Header="Relic Effects">
                    <Grid>
                        <TextBox x:Name="textboxFilterEffects" Margin="44,10,85,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="textboxFilterEffects_TextChanged" Height="22"/>
                        <ListBox x:Name="listRelicEffects" d:ItemsSource="{d:SampleData ItemCount=15}" Margin="10,54,10,10" SelectedIndex="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Description}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Filter:"/></TextBlock>
                        <CheckBox Content="Only show valid effects" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" IsChecked="False" Checked="FilterValidEffects" Unchecked="UnfilterValidEffects"/>
                        <Button Content="Clear" HorizontalAlignment="Left" Margin="308,11,0,0" VerticalAlignment="Top" Width="70" Click="Button_ClearEffectFilter"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Presets">
                    <Grid>
                        <Button Content="Load" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Click="Button_LoadPreset"/>
                        <Button Content="Create" HorizontalAlignment="Left" Margin="85,10,0,0" VerticalAlignment="Top" Width="70" Click="Button_CreatePreset"/>
                        <Button Content="Delete" HorizontalAlignment="Left" Margin="310,10,0,0" VerticalAlignment="Top" Width="70" Click="Button_DeletePreset"/>
                        <Button Content="Rename" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Width="70" Click="Button_RenamePreset"/>
                        <ListBox x:Name="listboxPresets" d:ItemsSource="{d:SampleData ItemCount=15}" Margin="10,87,10,10" SelectedIndex="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Filter:"/></TextBlock>
                        <ComboBox x:Name="comboboxFilterPresets" HorizontalAlignment="Left" Margin="44,60,0,0" VerticalAlignment="Top" Width="261" Height="22" IsEditable="True" TextBoxBase.TextChanged="comboboxFilterPresets_TextChanged">
                            <ComboBoxItem>Duchess</ComboBoxItem>
                            <ComboBoxItem>Executor</ComboBoxItem>
                            <ComboBoxItem>Guardian</ComboBoxItem>
                            <ComboBoxItem>Ironeye</ComboBoxItem>
                            <ComboBoxItem>Raider</ComboBoxItem>
                            <ComboBoxItem>Recluse</ComboBoxItem>
                            <ComboBoxItem>Revenant</ComboBoxItem>
                            <ComboBoxItem>Wylder</ComboBoxItem>
                        </ComboBox>
                        <Button Content="Move Up" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="70" Click="Button_MoveUpPreset"/>
                        <Button Content="Move Down" HorizontalAlignment="Left" Margin="85,35,0,0" VerticalAlignment="Top" Width="70" Click="Button_MoveDownPreset"/>
                        <Button Content="Update" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" Width="70" Click="Button_UpdatePreset"/>
                        <Button Content="Clear" HorizontalAlignment="Left" Margin="310,61,0,0" VerticalAlignment="Top" Width="70" Click="Button_ClearPresetFilter"/>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Relic"/><Run Text=" 1"/></TextBlock>
            <Button Content="Set slot 1" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic1Slot1"/>
            <Button Content="Set slot 2" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic1Slot2"/>
            <Button Content="Set slot 3" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic1Slot3"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Relic"/><Run Text=" "/><Run Text="2"/></TextBlock>
            <Button Content="Set slot 1" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic2Slot1"/>
            <Button Content="Set slot 3" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic2Slot2"/>
            <Button Content="Set slot 2" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic2Slot3"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Relic"/><Run Text=" "/><Run Text="3"/></TextBlock>
            <Button Content="Set slot 1" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic3Slot1"/>
            <Button Content="Set slot 3" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic3Slot2"/>
            <Button Content="Set slot 2" HorizontalAlignment="Left" Margin="10,248,0,0" VerticalAlignment="Top" Width="65" Click="Button_SetRelic3Slot3"/>
            <TextBlock x:Name="textRelic1Slot1" HorizontalAlignment="Left" Margin="80,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic1Slot2" HorizontalAlignment="Left" Margin="80,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic1Slot3" HorizontalAlignment="Left" Margin="80,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic2Slot1" HorizontalAlignment="Left" Margin="80,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic2Slot2" HorizontalAlignment="Left" Margin="80,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic2Slot3" HorizontalAlignment="Left" Margin="80,179,0,0" TextWrapping="Wrap" Height="16" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic3Slot1" HorizontalAlignment="Left" Margin="80,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic3Slot2" HorizontalAlignment="Left" Margin="80,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <TextBlock x:Name="textRelic3Slot3" HorizontalAlignment="Left" Margin="80,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="No Effect"/></TextBlock>
            <Button x:Name="buttonSetRelicsInGame" Content="Set relics in game" HorizontalAlignment="Left" Margin="10,298,0,0" VerticalAlignment="Top" Width="200" Click="Button_SetRelicsInGame"/>
            <Button x:Name="buttonImportRelicsFromGame" Content="Import relic data from game" HorizontalAlignment="Left" Margin="215,298,0,0" VerticalAlignment="Top" Width="200" Click="Button_GetRelicsFromGame"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Status:"/></TextBlock>
            <TextBlock x:Name="textConnectionStatus" HorizontalAlignment="Left" Margin="53,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="352"><Run Language="en-au" Text="Not connected"/></TextBlock>
        </Grid>

    </StackPanel>
</Window>
